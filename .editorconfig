# editorconfig.org
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.md,*.yml,*.yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

# Ignore the p10k.zsh file when calling shfmt.
[*p10k*.zsh]
ignore = true
